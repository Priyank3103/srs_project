    @using (Html.BeginForm("DashBoard", "Home", FormMethod.Post))
    {
        <div class="progress-notes col-md-offset-1 col-md-10">
            <div class="col-md-6">
                <h3>In Progress Notes</h3>
            </div>
            <div class="form-group has-search col-md-6">
                @Html.TextBox("searchTxt", null, new { @class = "form-control col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-6 search", @placeholder = "Search" })
                <input type="submit" class="btn btn-general btn-search col-md-4 pull-right col-xs-3" value="Search" />
            </div>
        </div>

        <div class="table-responsive-lg col-md-offset-1">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.ActionLink("Added Date", "DashBoard", new { @class = "actions", Sortorder = ViewBag.Sortorder == null ? "Asc" : (ViewBag.Sortorder == "Asc" ? "Desc" : "Asc"), SortBy = "Added Date", Pagenumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                        </th>
                        <th scope="col">
                            @Html.ActionLink("Title", "DashBoard", new { @class = "actions", Sortorder = ViewBag.Sortorder == null ? "Asc" : (ViewBag.Sortorder == "Asc" ? "Desc" : "Asc"), SortBy = "Title", Pagenumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                        </th>
                        <th scope="col">Category</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var notes in Model)
                    {
                        ViewBag.Id = notes.ID;
                        <tr>
                            <td scope="row">@notes.CreatedDate</td>
                            <td class="title">@notes.Title</td>
                            <td>@notes.Category</td>
                            <td>@notes.Status</td>
                            <td class="actions">
                                <a href="@Url.Action("EditNote", "Home", new { id = notes.ID ,notes.Status, notes.SellerID, notes.ActionedBy, notes.AdminRemarks, notes.PublishedDate, notes.Title, notes.Category, notes.DisplayPicture, notes.NoteType, notes.NumberofPages, notes.Description, notes.UniversityName, notes.Country, notes.Course, notes.CourseCode, notes.Professor, notes.IsPaid, notes.SellingPrice, notes.NotesPreview, notes.CreatedDate, notes.Createdby, notes.ModifiedBy, notes.ModifiedDate, notes.IsActive, notes.DisplayFile })"><img src="~/img/edit.png" /></a>
                                <a href="@Url.Action("Delete", "Home", new { id = notes.ID })"><img src="~/img/delete.png" /></a>
                                <a href="@Url.Action("Notedetails", "Home", new {id = notes.ID})"><img src="~/img/eye.png" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="pagination-content">
            <nav aria-label="Page navigation example">

                @{
                    double totalPages = ViewBag.TotalPages;

                    if (totalPages > 1)
                    {
                        <ul class="pagination pagination-lg">

                            @if (ViewBag.PageNumber == 1)
                            {
                                <li>
                                    @Html.ActionLink("<", "DashBoard", new { @class = "page-link", Sortorder = ViewBag.Sortorder == null ? "Asc" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, Pagenumber = ViewBag.PageNumber })
                                </li>
                            }

                            else
                            {
                                <li>
                                    @Html.ActionLink("<", "DashBoard", new { @class = "page-link", Sortorder = ViewBag.Sortorder == null ? "Asc" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, Pagenumber = ViewBag.PageNumber - 1 })
                                </li>
                            }

                            @for (int i = 1; i <= totalPages; i++)
                            {

                                if (i == ViewBag.PageNumber)
                                {
                                    <li class="active">
                                        @Html.ActionLink(i.ToString(), "DashBoard", new { @class = "page-link", Sortorder = ViewBag.Sortorder == null ? "Asc" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, Pagenumber = i })
                                    </li>
                                }

                                else
                                {
                                    <li>
                                        @Html.ActionLink(i.ToString(), "DashBoard", new { @class = "page-link", Sortorder = ViewBag.Sortorder == null ? "Asc" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, Pagenumber = i })
                                    </li>
                                }


                            }

                            @if (ViewBag.PageNumber == totalPages)
                            {
                                <li>
                                    @Html.ActionLink(">", "DashBoard", new { @class = "page-link", Sortorder = ViewBag.Sortorder == null ? "Asc" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, Pagenumber = ViewBag.PageNumber })
                                </li>
                            }

                            else
                            {
                                <li>
                                    @Html.ActionLink(">", "DashBoard", new { @class = "page-link", Sortorder = ViewBag.Sortorder == null ? "Asc" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, Pagenumber = ViewBag.PageNumber + 1 })
                                </li>
                            }

                        </ul>
                    }

                }

                @*<ul class="pagination pagination-lg">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&lsaquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link main" href="#">1</a></li>
